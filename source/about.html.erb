<div id="about">
  <div class="container">
    <div class="about-content">
      <div class="row">
        <div class="col-xs-12 col-sm-12">
          <h1>This template was built with
            <i class="fa fa-heart"> </i></h1>
          </div>
          <ul class="list-inline text-center">
            <%
            team = [
              { fullname: "Mark van Riet", gh_name: "MarkLeWagon" }
