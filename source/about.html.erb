            <li>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{member[:gh_name]}", class: "img-circle" %>
              <h3><%= member[:fullname] %></h3>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

